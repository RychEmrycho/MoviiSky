<resources>

    <style name="App.Theme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.Theme.Base.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <style name="App.Theme.SplashScreen" parent="App.Theme.Base">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="App.Widget.Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="App.Widget.Button.Base.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="App.Widget.Button.Primary" parent="App.Widget.Button.Base">
        <item name="colorPrimary">#00c853</item>
    </style>

    <style name="App.Widget.Button.Outlined.Primary" parent="App.Widget.Button.Base.Outlined">
        <item name="rippleColor">#5efc82</item>
        <item name="android:textColor">#00c853</item>
        <item name="strokeColor">#00c853</item>
    </style>

    <style name="App.Widget.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="App.Widget.Text.BigTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#000063</item>
    </style>

    <style name="App.Widget.Text.BigSubTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="App.Widget.Text.Label" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>
